config 'global'
	option	anon_swap	'0'
	option	anon_mount	'0'
	option	auto_swap	'1'
	option	auto_mount	'0'
	option	delay_root	'20'
	option	check_fs	'0'


config mount 'overlay'
        option target   '/overlay'
        option fstype   'btrfs'
        option uuid     '68706ead-a626-4209-b3d0-1187b835f803'
	option btrfs_raid '1'
	option options 	'subvol=/overlay,noatime,nodiratime,noacl,degraded,nossd'
#        option options  'subvol=/overlay,noatime,nodiratime,noacl,degraded,nossd,device=/dev/sda,device=/dev/sdb,device=/dev/sdc,device=/dev/sdd'
        option enabled  '0'

config mount 'rootfs'
        option target   '/'
        option fstype   'btrfs'
        option uuid     '68706ead-a626-4209-b3d0-1187b835f803'
	option btrfs_raid '1'
	option options  'subvol=/rootfs,noatime,nodiratime,noacl,degraded,nossd'
#        option options  'subvol=/rootfs,noatime,nodiratime,noacl,degraded,nossd,device=/dev/sda,device=/dev/sdb,device=/dev/sdc,device=/dev/sdd'
        option enabled  '0'

config mount 'btrfs'
        option target '/mnt/btrfs'
        option uuid '68706ead-a626-4209-b3d0-1187b835f803'
        option fstype 'btrfs'
	option btrfs_raid '1'
	option options 'subvolid=5,noatime,nodiratime,noacl,degraded,nossd'
#        option options 'subvolid=5,noatime,nodiratime,noacl,degraded,nossd,device=/dev/sda,device=/dev/sdb,device=/dev/sdc,device=/dev/sdd' 
        option enabled '1'

config mount 'data'
        option target '/mnt/data'
        option uuid '68706ead-a626-4209-b3d0-1187b835f803'
        option fstype 'btrfs'
	option btrfs_raid '1'
	option options 'subvol=/data,noatime,nodiratime,noacl,degraded,nossd'
#        option options 'subvol=/data,noatime,nodiratime,noacl,degraded,nossd,device=/dev/sda,device=/dev/sdb,device=/dev/sdc,device=/dev/sdd' 
        option enabled '1'

config mount 'lxc'
        option target '/srv/lxc'
        option uuid '68706ead-a626-4209-b3d0-1187b835f803'
        option fstype 'btrfs'
	option btrfs_raid '1'
	option options 'subvol=/containers,noatime,nodiratime,noacl,degraded,nossd'
#        option options 'subvol=/containers,noatime,nodiratime,noacl,degraded,nossd,device=/dev/sda,device=/dev/sdb,device=/dev/sdc,device=/dev/sdd' 
        option enabled '1'

